
@{
    ViewBag.Title = "Car Index";
}

<h2>Car Registration</h2>
<hr />
<form class="form-horizontal" action="/Car/Register" method="get">
    <div class="form-group">
        <label for="Make" class="col-sm-6 control-label">Make:</label>
        <div class="col-sm-6">
            <input type="text" name="Make" class="form-control" />
        </div>
        <label for="Plate" class="col-sm-6 control-label"">Model:</label>
        <div class="col-sm-6">
            <input type="text" name="Plate" class="form-control" /><br />
            </div>
        <label for="Year" class="col-sm-6 control-label"">Year:</label>
        <div class="col-sm-6">
            <input type="number" name="Year" class="form-control" /><br />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4"></div>
        <div class="col-sm-4" style="text-align:center">
            <input type="submit" class="btn btn-primary" name="Register!" />
            <input type="reset" class="btn btn-warning" name="Reset Form" />
        </div>
        <div class="col-sm-4"></div>

     </div>
 </form>
